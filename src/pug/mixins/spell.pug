mixin spell(data)
  - bg_image = `background-image: url('./img/${data.picture}');`
  - paras = data.tldr.split("\n")
  .card-wrapper
    .card.oh
      .flcnw.h-100
        .fln.flrnw.h-40
          .fla.flcnw
            .fln.flrnw
              .name.fla.bg-black.blue.caslon.f3.ph2.pv1= data.name
              .fln.flc.pa2.gray= data.reference
            .fla.flrw
              if data.pp
                .fln.flrnw.w-50.flc
                  .fln.b Power Points:
                  .fln.pl3= data.pp
              if data.roll
                .fln.flrnw.w-50.flc
                  .fln.b Roll:
                  .fln.pl3= data.roll
              .fln.flrnw.w-50.flc
                .fln.b.w3.mr3 Range:
                .fln= data.range
              .fln.flrnw.w-50.flc
                .fln.b.w3.mr3 Duration:
                .fln= data.duration
              .fln.flrnw.w-50.flc
                .fln.b.w3.mr3 Rank:
                .fln= data.rank
              .fla.i.mta.pa1.f6= data.trappings
          .fln.w-third.bg-contain.bg-center(style=bg_image)

        .fla.flcnw
          .fla.pa2
            each para in paras
              .mb2= para
          if data.full
            .fln.f7.mta.i.dark-gray.pt1.bt.bw1.b--black-30.pa2= data.full

